<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:padding="20dp"    android:layout_marginBottom="12dp"    android:layout_marginHorizontal="12dp"    android:background="@drawable/item_stat_background"    android:elevation="2dp"    android:clipToPadding="false">    <TextView        android:id="@+id/tvStatDetail"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textColor="#333333"        android:textSize="16sp"        android:lineSpacingExtra="4dp"        android:fontFamily="sans-serif-medium"        android:letterSpacing="0.02" /></LinearLayout>