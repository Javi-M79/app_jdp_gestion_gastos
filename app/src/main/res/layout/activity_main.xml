<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondoapp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutMain"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Título de la app -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="JDP Finance"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textStyle="bold"
            android:shadowColor="@color/white"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Logo flotante fuera del CardView pero parcialmente visible dentro -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/calculadora"
            android:elevation="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lyFormulario"/>

        <!-- CardView con formulario -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lyFormulario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/degradado_app"
            android:padding="24dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo">

            <!-- Campo de email -->
            <EditText
                android:id="@+id/etMail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Campo de contraseña -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etMail" />

            <!-- Enlace para recuperar contraseña -->
            <TextView
                android:id="@+id/tvOlvidarContraseña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etPassword" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvPregunta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="¿No eres miembro todavía?"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@id/tvCrearCuenta"
            app:layout_constraintStart_toStartOf="@id/lyFormulario"
            app:layout_constraintTop_toBottomOf="@id/lyFormulario" />

        <TextView
            android:id="@+id/tvCrearCuenta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Crear Cuenta"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/lyFormulario"
            app:layout_constraintStart_toEndOf="@id/tvPregunta"
            app:layout_constraintTop_toBottomOf="@id/lyFormulario"/>
        <!-- Botón de login -->

        <TextView
            android:id="@+id/tvIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="o puedes ingresar con..."
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPregunta" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Iniciar sesión"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/usuarioseguro"
            app:cornerRadius="16dp"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:layout_constraintEnd_toEndOf="@id/lyFormulario"
            app:layout_constraintStart_toStartOf="@id/lyFormulario"
            app:layout_constraintTop_toBottomOf="@id/tvIngresar"
            app:backgroundTint="@color/primaryColor"
            app:rippleColor="@color/common_google_signin_btn_text_dark"
            app:elevation="4dp"
            app:pressedTranslationZ="4dp"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"/>


        <!-- LinearLayout para los logos debajo del CardView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLogin">

            <!-- Logo de Gmail -->
            <ImageView
                android:id="@+id/ivGmail"
                android:layout_marginRight="30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google" />

            <!-- Logo de Meta (Facebook) -->
            <ImageView
                android:id="@+id/ivMeta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/manzana" />

            <!-- Logo de Apple -->
            <ImageView
                android:id="@+id/ivApple"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
