<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:padding="16dp">    <EditText        android:id="@+id/etDescription"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="DescripciÃ³n"        android:inputType="text" />    <EditText        android:id="@+id/etAmount"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Monto"        android:inputType="numberDecimal" />    <EditText        android:id="@+id/etDate"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Fecha"        android:inputType="none"        android:focusable="false" />    <RadioGroup        android:id="@+id/rgTransactionType"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:paddingTop="8dp">        <RadioButton            android:id="@+id/rbIncome"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Ingreso"            android:checked="true"/>        <RadioButton            android:id="@+id/rbExpense"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Gasto" />    </RadioGroup></LinearLayout>