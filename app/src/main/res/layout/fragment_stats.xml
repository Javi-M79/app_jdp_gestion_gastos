<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:padding="20dp">    <!-- Titulo de la sección -->    <TextView        android:id="@+id/tvStatsTitle"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Resumen de Gastos"        android:textSize="40sp"        android:layout_marginTop="50dp"        android:textColor="#000000"        android:textStyle="bold"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:layout_marginBottom="16dp" />    <!-- Total de Gastos -->    <LinearLayout        android:id="@+id/totalGastosContainer"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:layout_marginTop="30dp"        app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:background="@drawable/fondo_redondeado"        android:padding="12dp"        android:layout_marginBottom="8dp">        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:src="@drawable/dinero"            android:contentDescription="Gastos Totales"            android:layout_gravity="center_vertical" />        <TextView            android:id="@+id/tvTotalGastos"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Total de Gastos: 0.00 €"            android:textSize="20sp"            android:textColor="#000000"            android:layout_marginStart="8dp"            android:layout_gravity="center_vertical" />    </LinearLayout>    <!-- Promedio de Gastos -->    <LinearLayout        android:id="@+id/promedioGastosContainer"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:layout_marginTop="30dp"        app:layout_constraintTop_toBottomOf="@id/totalGastosContainer"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:background="@drawable/fondo_redondeado"        android:padding="12dp"        android:layout_marginBottom="8dp">        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:src="@drawable/promedio"            android:contentDescription="Promedio de Gastos"            android:layout_gravity="center_vertical" />        <TextView            android:id="@+id/tvPromedioGastos"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Promedio de Gastos: 0.00 €"            android:textSize="20sp"            android:textColor="#000000"            android:layout_marginStart="8dp"            android:layout_gravity="center_vertical" />    </LinearLayout>    <!-- Número de Transacciones -->    <LinearLayout        android:id="@+id/numTransaccionesContainer"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:layout_marginTop="30dp"        app:layout_constraintTop_toBottomOf="@id/promedioGastosContainer"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:background="@drawable/fondo_redondeado"        android:padding="12dp"        android:layout_marginBottom="8dp">        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:src="@drawable/transaccion"            android:contentDescription="Número de Transacciones"            android:layout_gravity="center_vertical" />        <TextView            android:id="@+id/tvNumTransacciones"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Número de Transacciones: 0"            android:textSize="20sp"            android:textColor="#000000"            android:layout_marginStart="8dp"            android:layout_gravity="center_vertical" />    </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>