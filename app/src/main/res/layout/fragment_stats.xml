<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:padding="20dp"    android:orientation="vertical">    <!-- Titulo de la sección -->    <TextView        android:id="@+id/tvStatsTitle"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal"        android:layout_marginTop="50dp"        android:layout_marginBottom="16dp"        android:text="Resumen mensual"        android:textColor="?attr/colorOnBackground"        android:textSize="40sp"        android:textStyle="bold" />    <TextView        android:id="@+id/tvFiltrarMes"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="30dp"        android:text="Mes"        android:paddingLeft="12dp"        android:textColor="?attr/colorOnBackground"        android:textSize="15sp"        android:textStyle="bold" />    <Spinner        android:id="@+id/spinnerMonthFilter"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@drawable/spinner_background"        android:textColor="?attr/colorOnBackground" />    <!-- Total de Ingresos -->    <LinearLayout        android:id="@+id/totalIngresosContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="20dp"        android:layout_marginBottom="8dp"        android:background="@drawable/fondo_redondeado"        android:orientation="horizontal"        android:padding="12dp">        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:contentDescription="Ingresos Totales"            android:src="@drawable/dinero" />        <TextView            android:id="@+id/tvTotalIngresos"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginStart="8dp"            android:text="Total de Ingresos: 0.00 €"            android:textColor="?attr/colorOnBackground"            android:textSize="20sp" />    </LinearLayout>    <!-- Total de Gastos -->    <LinearLayout        android:id="@+id/totalGastosContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="30dp"        android:layout_marginBottom="8dp"        android:background="@drawable/fondo_redondeado"        android:orientation="horizontal"        android:padding="12dp">        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:contentDescription="Gastos Totales"            android:src="@drawable/dinero" />        <TextView            android:id="@+id/tvTotalGastos"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginStart="8dp"            android:text="Total de Gastos: 0.00 €"            android:textColor="?attr/colorOnBackground"            android:textSize="20sp" />    </LinearLayout>    <!-- Promedio de Gastos -->    <LinearLayout        android:id="@+id/promedioGastosContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="30dp"        android:layout_marginBottom="8dp"        android:background="@drawable/fondo_redondeado"        android:orientation="horizontal"        android:padding="12dp">        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:contentDescription="Promedio de Gastos"            android:src="@drawable/promedio" />        <TextView            android:id="@+id/tvPromedioGastos"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginStart="8dp"            android:text="Total disponible: 0.00 €"            android:textColor="?attr/colorOnBackground"            android:textSize="20sp" />    </LinearLayout>    <!-- Número de Ingresos -->    <LinearLayout        android:id="@+id/numIngresosContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="30dp"        android:layout_marginBottom="8dp"        android:background="@drawable/fondo_redondeado"        android:orientation="horizontal"        android:padding="12dp">        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:contentDescription="Número de Ingresos"            android:src="@drawable/incomes" />        <TextView            android:id="@+id/tvNumTransaccionesIngresos"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginStart="8dp"            android:text="Número de Ingresos: 0"            android:textColor="?attr/colorOnBackground"            android:textSize="20sp" />    </LinearLayout>    <!-- Número de Gastos -->    <LinearLayout        android:id="@+id/numGastosContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="30dp"        android:layout_marginBottom="8dp"        android:background="@drawable/fondo_redondeado"        android:orientation="horizontal"        android:padding="12dp">        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:contentDescription="Número de Gastos"            android:src="@drawable/expense" />        <TextView            android:id="@+id/tvNumTransaccionesGastos"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginStart="8dp"            android:text="Número de Gastos: 0"            android:textColor="?attr/colorOnBackground"            android:textSize="20sp" />    </LinearLayout></LinearLayout>